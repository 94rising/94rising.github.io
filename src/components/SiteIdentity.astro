---
import { Image } from "astro:assets";
import siteConfig from "../site.config";
import { withBase } from "../utils/helpers";

type SiteIdentityProps = {
  logoWidth?: number;
  logoHeight?: number;
  loading?: "eager" | "lazy";
  textSize?: "text-base" | "text-xl";
  class?: string;
};

const {
  logoWidth = 32,
  logoHeight = 32,
  loading = "eager",
  textSize = "text-base",
  class: customClass,
}: SiteIdentityProps = Astro.props;
---

<div class:list={["flex items-center gap-2", customClass]}>
  <Image
    src={withBase("/space-ahead-logo.png")}
    alt="Logo"
    width={logoWidth}
    height={logoHeight}
    loading={loading}
  />
  <span class:list={["sigmar-ff text-[10px] sm:text-sm md:text-base whitespace-nowrap overflow-hidden text-ellipsis max-w-[180px] sm:max-w-none", customClass && textSize !== "text-base" ? textSize : ""]}>{siteConfig.title}</span>
</div>
